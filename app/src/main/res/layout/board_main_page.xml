<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/create_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color1"
        android:text="Create board"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="628dp" />

    <LinearLayout
        android:layout_width="349dp"
        android:layout_height="177dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="116dp">

        <TextView
            android:id="@+id/my_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My post" />

        <TextView
            android:id="@+id/my_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My reply" />

        <TextView
            android:id="@+id/hot_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hot post" />

        <TextView
            android:id="@+id/best_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best post" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>