        <activity android:name=".boardfolder.BoardPage" />
        <activity android:name=".neologismfolder.SearchNeologism" />
        <activity android:name=".boardfolder.SearchBoard" />
        <activity android:name=".boardfolder.BoardDetail" />
        <activity android:name=".homefolder.SignUp" />
