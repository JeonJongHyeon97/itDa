        <activity android:name=".neologismfolder.NeologismRequest" />
        <activity android:name=".boardfolder.MyPostPage" />
        <activity android:name=".boardfolder.SearchBoardDetail" />
        <activity android:name=".boardfolder.WritePage" />
        <activity android:name=".neologismfolder.Neologism_page" />
        <activity android:name=".familydiaryfolder.AddImagePage" />
        <activity android:name=".AlarmPage" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_family_restroom_black_18dp" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
    </application>
</manifest>